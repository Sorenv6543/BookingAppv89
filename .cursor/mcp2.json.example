{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}"
      ],
      "description": "Enhanced filesystem access for project navigation"
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--access-token",
        "${SUPABASE_ACCESS_TOKEN}"
      ]
    },
    
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "Enhanced web content fetching for documentation and resources"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search capabilities via Brave Search API",
      "disabled": false,

      "note": "Set BRAVE_API_KEY in your environment (e.g., .env.local); do not commit secrets"
      
    },

    "postgres-local": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${SUPABASE_DB_LOCAL_URL}"
      ],
      "description": "Local Supabase PostgreSQL database access (requires 'supabase start')",
      "disabled": true,
      "note": "Set SUPABASE_DB_LOCAL_URL in your environment; enable after running 'supabase start'"
    },

    "postgres-remote": {
      "command": "npx",
      "args": [
        "-y", 
        "@modelcontextprotocol/server-postgres",
        "${SUPABASE_DB_URL}"
      ],
      "description": "Remote Supabase PostgreSQL database access (production)"
    },

    "github": {

      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "GitHub repository management (issues, PRs, etc.)",
      "note": "Requires GITHUB_PERSONAL_ACCESS_TOKEN in .env.local"
    },

    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date documentation and code examples for any library/framework",
      "note": "Optional: Get API key at https://context7.com/dashboard for higher rate limits"
    }

  }
}
