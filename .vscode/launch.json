    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue App: Launch dev + Chrome",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "preLaunchTask": "pnpm: dev",
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue App: Chrome only (dev already running)",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true
        }
    ]
}