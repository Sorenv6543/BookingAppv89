# BookingApp v89 - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ==============================================================================
# SUPABASE CONFIGURATION (Required)
# ==============================================================================
# Get these from: https://app.supabase.com/project/otmfvzkokrxduipxkyga/settings/api

VITE_SUPABASE_URL=https://otmfvzkokrxduipxkyga.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Application Environment
NODE_ENV=production              # development | staging | production
VITE_APP_TITLE=BookingApp v89    # Application title
VITE_APP_VERSION=0.1.0           # Application version

# ==============================================================================
# FEATURE FLAGS (Optional)
# ==============================================================================

# Role-based features
VITE_ENABLE_OWNER_FEATURES=true    # Enable property owner interface
VITE_ENABLE_ADMIN_FEATURES=true    # Enable business admin interface
VITE_ENABLE_DEV_DEMOS=false        # Enable demo components (dev only)

# ==============================================================================
# BUILD OPTIMIZATION (Optional)
# ==============================================================================

# Source maps (disable in production for security)
VITE_ENABLE_SOURCEMAPS=false

# Remove console.log statements in production
VITE_DROP_CONSOLE=true

# Bundle analysis
VITE_BUNDLE_ANALYZER=false

# ==============================================================================
# SECURITY (Optional but Recommended for Production)
# ==============================================================================

# Content Security Policy
VITE_ENABLE_CSP=true

# Secure cookies
VITE_SECURE_COOKIES=true

# CORS origin (your production domain)
VITE_CORS_ORIGIN=https://yourapp.com

# ==============================================================================
# DEPLOYMENT MODE (Optional)
# ==============================================================================

# Leave empty for full build, or specify 'owner' or 'admin' for role-specific builds
# ROLE_BUILD=                      # Full build (default)
# ROLE_BUILD=owner                 # Owner-only build (~50% smaller)
# ROLE_BUILD=admin                 # Admin-only build (~25% smaller)
