{
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "Filesystem access for project navigation"
    },
    "supabase": {
      "command": "cmd",
      "args": [
        "/c", "npx", "-y", "@supabase/mcp-server-supabase@latest",
        "--access-token", "${SUPABASE_ACCESS_TOKEN}",
        "--project-ref", "otmfvzkokrxduipxkyga"
      ],
      "description": "Supabase project management (database, auth, storage)",
      "note": "Set SUPABASE_ACCESS_TOKEN in .env.local"
    },
    "postgres-local": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres", "${SUPABASE_DB_LOCAL_URL}"],
      "description": "Local Supabase PostgreSQL (requires 'supabase start')",
      "disabled": true
    },
    "postgres-remote": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres", "${SUPABASE_DB_URL}"],
      "description": "Remote Supabase PostgreSQL (production)"
    },
    "github": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-github"],
      "env": { "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}" },
      "description": "GitHub repository management (issues, PRs, etc.)"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "fetch-mcp"],
      "description": "Fetch HTML, JSON, Markdown from URLs"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": { "BRAVE_API_KEY": "${BRAVE_API_KEY}" },
      "description": "Web search via Brave Search API",
      "disabled": false
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date documentation for any library/framework"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "description": "Browser automation and E2E testing"
    },
    "desktop-commander": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@wonderwhy-er/desktop-commander"],
      "description": "Desktop automation utilities"
    }
  }
}
